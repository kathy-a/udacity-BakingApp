<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baking_placeholder_2"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/widget_text_header"
        style="@style/Heading2"
        android:layout_margin="8dp"
        android:contentDescription="@string/ingredients"
        android:text="@string/ingredients"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold|italic" />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/Heading3"
            android:id="@+id/widget_text_ingredientName"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/widget_text_ingredient_measurement"
            tools:text="@string/recipe_ingredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            style="@style/Heading3"
            tools:text="@string/recipe_ingredient_measurement"
            android:textAlignment="textEnd"
            android:id="@+id/widget_text_ingredient_measurement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"/>

    </RelativeLayout>

</LinearLayout>